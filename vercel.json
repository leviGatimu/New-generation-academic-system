{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    { "src": "/admin/(.*)", "dest": "/api/admin/$1" },
    { "src": "/teacher/(.*)", "dest": "/api/teacher/$1" },
    { "src": "/student/(.*)", "dest": "/api/student/$1" },
    { "src": "/parent/(.*)", "dest": "/api/parent/$1" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ]
}